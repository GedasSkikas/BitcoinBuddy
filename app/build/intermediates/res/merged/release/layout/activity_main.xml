<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0efc0">

    <Button
        android:id="@+id/btcMapButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btcGuidesButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="#debf85"
        android:text="Bitcoin Map"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btcPriceButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btcMapButton"
        android:layout_alignStart="@+id/btcMapButton"
        android:layout_below="@+id/btcMapButton"
        android:layout_marginTop="67dp"
        android:background="#debf85"
        android:text="Bitcoin Pricing"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btcGuidesButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btcMapButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btcMapButton"
        android:layout_marginTop="74dp"
        android:background="#debf85"
        android:text="Bitcoin FAQ"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btcAlertButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#debf85"
        android:text="Set Pricing Alerts" />

</RelativeLayout>